<Window x:Class="MusicPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicPlayer"
        mc:Ignorable="d"
        Title="MainWindow" Height="342" Width="212">
    <Grid>
        <MediaElement Name="MusicElement" HorizontalAlignment="Left" Height="100" Margin="46,29,0,0" VerticalAlignment="Top" Width="100" Loaded="MusicElement_Loaded" MediaEnded="PlayNextSong"/>
        <Button Name="PlayButton" Content="Play" HorizontalAlignment="Left" Margin="46,181,0,0" VerticalAlignment="Top"  Click="PlayButton_Click"/>
        <Button Name="BackButton" Content="Back" HorizontalAlignment="Left" Margin="92,181,0,0" VerticalAlignment="Top" Click="BackButton_Click" MouseDoubleClick="BackButton_MouseDoubleClick" />
        <Button Name="SkipButton" Content="Skip" HorizontalAlignment="Left" Margin="140,181,0,0" VerticalAlignment="Top" Click="PlayNextSong"/>
        <Slider Name="TimelineSlider" ValueChanged="TimelineSlider_ValueChanged" HorizontalAlignment="Left" Margin="46,206,0,0" VerticalAlignment="Top" Width="120"/>
        <Slider Name="VolumeSlider" VerticalAlignment="Top" ValueChanged="VolumeSlider_ValueChanged" Minimum="0" Maximum="1" Value="0.1" RenderTransformOrigin="0.5,0.5" Margin="-15,181,0,0" HorizontalAlignment="Left" Width="83">
            <Slider.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-90"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Slider.RenderTransform>
        </Slider>

        <RadioButton Content="Off" HorizontalAlignment="Left" Margin="46,251,0,0" VerticalAlignment="Top" IsChecked="True" Click="RadioButton_Click"/>
        <RadioButton Content="Song" HorizontalAlignment="Left" Margin="46,266,0,0" VerticalAlignment="Top" Click="RadioButton_Click"/>
        <RadioButton Content="Playlist" HorizontalAlignment="Left" Margin="46,281,0,0" VerticalAlignment="Top" Click="RadioButton_Click"/>
        <Label Content="Repeat" HorizontalAlignment="Left" Margin="59,229,0,0" VerticalAlignment="Top"/>


    </Grid>
</Window>

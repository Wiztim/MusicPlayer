<Window x:Class="MusiPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusiPlayer"
        mc:Ignorable="d"
        Title="MainWindow" Height="354" Width="314">
    <Grid>
        <MediaElement Name="MusicElement" HorizontalAlignment="Left" Height="100" Margin="10,10,0,0" VerticalAlignment="Top" Width="100" Loaded="MusicElement_Loaded"/>
        <Button Name="PlayButton" Content="Play" HorizontalAlignment="Left" Margin="32,196,0,0" VerticalAlignment="Top"  Click="PlayButton_Click"/>
        <Button Name="PauseButton" Content="Pause" HorizontalAlignment="Left" Margin="92,196,0,0" VerticalAlignment="Top" Click="PauseButton_Click"/>
        <Button Name="SkipButton" Content="Skip" HorizontalAlignment="Left" Margin="157,196,0,0" VerticalAlignment="Top" Click="SkipButton_Click"/>

    </Grid>
</Window>
